<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5sp"
    app:cardCornerRadius="15sp"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginTop="4sp"
    android:layout_marginBottom="2sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="#F8E6E6"
        android:padding="10sp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="5sp"
            android:singleLine="true"
            android:text="Model printera"
            android:textColor="?attr/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_subtitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_title"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:textSize="16dp"
            android:singleLine="true"
            android:text="S/N:" />

        <CheckBox
            android:id="@+id/checkBoxInformatika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/checkBoxLDC"
            android:text="Informatika" />

        <CheckBox
            android:id="@+id/checkBoxLDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/checkBoxServis"
            android:text="LDC" />
        <CheckBox
            android:id="@+id/checkBoxServis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
           android:layout_alignParentRight="true"
            android:text="Servis" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>